grep -Irl "chmod 777" *.txt | xargs sed -i 's/chmod 777/chmod 750/g' - Find and replace
ls | cut -d. -f1 | xargs -I {} mv {}.txt {}.text 
seq 5 | xargs -n 1 -P 1 bash -c 'echo(0); sleep 1'
